!!!
%html
  %head
    %title
      = yield_content :title
      
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'navigation'

    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js'
    = javascript_include_tag 'application'

    %link{:href => "/images/favicon.ico", :rel => "shortcut icon"}

    = yield_content :head
    
  %body
    %header
        
    %nav
      %ul{:class => 'navigation'}
        %li
          = link_to '/location', :class => ('active' if current_page.path == 'location.html') do
            %span.b
              %span.c Location
        %li
          = link_to '/reservations', :class => ('active' if current_page.path == 'reservations.html') do
            %span.b
              %span.c Reservations
        %li{:id => 'logo'}
          = link_to '/'do
            =image_tag 'logo.png', :alt => 'logo', :width => '200', :height => '80'
        %li
          = link_to '/events', :class => ('active' if current_page.path == 'events.html') do
            %span.b
              %span.c Events
        %li  
          = link_to '/deals', :class => ('active' if current_page.path == 'deals.html') do
            %span.b
              %span.c Deals
        %li  
          = link_to '/contact', :class => ('active' if current_page.path == 'contact.html') do
            %span.b
              %span.c Contact

    #content
      = yield

    %footer
      #privacy
        = "seÃ±or nacho bed & breakfast &copy; #{Time.now.year} |&nbsp;"
        %a{:href=> '/privacy', :target => '_blank'} 
          privacy policy
      #social_links
        %ul
          %li
            %a{:href => 'http://twitter.com/senor_nacho', :target => '_blank'}
              =image_tag 'twitter_icon.png', :alt => 'twitter', :width => '26', :height => '26'
          %li
            %a{:href => 'http://facebook.com/senor_nacho', :target => '_blank'}
              =image_tag 'facebook_icon.png', :alt => 'facebook', :width => '22', :height => '22'
          %li
            %a{:href => 'http://plus.google.com/some_id/', :target => '_blank'}
              =image_tag 'google_icon.png', :alt => 'google', :width => '24', :height => '24'
        
